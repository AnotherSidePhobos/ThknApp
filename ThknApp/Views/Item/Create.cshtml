@model ThknApp.Models.Item
    <div class="container">
        <form method="post" asp-action="Create">
            <div class="border p-3">
                <div class="form-group row">
                    <h2 class="text-black-50 pl-3">Add Item</h2>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <div class="col-3">
                                <label asp-for="Name"></label>
                            </div>
                            <div class="col-3">
                                <label asp-for="Cost"></label>
                            </div>
                            <div class="col-3">
                                <label asp-for="IsItThere"></label>
                            </div>
                            <div class="col-3">
                                <label asp-for="IsItFood"></label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-3">
                                <input asp-for="Name" class="form-control" />
                            </div>
                            <div class="col-3">
                                <input asp-for="Cost" class="form-control" />
                            </div>
                            <div class="col-3">
                                <input asp-for="IsItThere" class="form-control" />
                            </div>
                            <div class="col-3">
                                <input asp-for="IsItFood" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-8 offset-2 row">
                                <div class="col">
                                    <input type="submit" class="btn btn-info w-75" value="create" />
                                </div>
                                <div class="col">
                                    <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
        </form>
    </div>
</div>

